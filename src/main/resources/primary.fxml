<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gestionprojet.controller.PrimaryController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Bar -->
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="Kanban Board" textFill="white">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10"/>
                </padding>
                <Button fx:id="addTaskButton" text="+ Add Task" onAction="#handleAddTask"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Kanban Columns -->
    <center>
        <HBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- TODO Column -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="TO DO" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background: transparent;">
                    <VBox fx:id="todoColumn" spacing="10" style="-fx-background-color: transparent;">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                    </VBox>
                </ScrollPane>
            </VBox>

            <!-- DOING Column -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="DOING" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background: transparent;">
                    <VBox fx:id="doingColumn" spacing="10" style="-fx-background-color: transparent;">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                    </VBox>
                </ScrollPane>
            </VBox>

            <!-- DONE Column -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="DONE" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background: transparent;">
                    <VBox fx:id="doneColumn" spacing="10" style="-fx-background-color: transparent;">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                    </VBox>
                </ScrollPane>
            </VBox>

        </HBox>
    </center>

</BorderPane>
