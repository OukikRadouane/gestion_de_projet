<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@../css/style.css"
      spacing="30">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Header Section -->
    <VBox spacing="8">
        <Label text="Backlog Produit" styleClass="h1" />
        <Label text="Gérez toutes les tâches non encore assignées à un sprint." styleClass="small-text" />
    </VBox>

    <ScrollPane style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="20" styleClass="card">
            <HBox alignment="CENTER_LEFT">
                <VBox spacing="4">
                    <Label text="Tâches non planifiées" styleClass="h2" />
                    <Label text="Priorisez vos tâches avant de les déplacer vers un sprint." styleClass="small-text" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="+ Ajouter au Backlog" styleClass="button-primary" />
            </HBox>

            <TableView fx:id="backlogTable" style="-fx-background-color: transparent; -fx-border-color: -fx-border; -fx-border-radius: 8;">
                <columns>
                    <TableColumn text="TITRE" prefWidth="300" />
                    <TableColumn text="PRIORITÉ" prefWidth="120" />
                    <TableColumn text="STATUT" prefWidth="120" />
                    <TableColumn text="ASSIGNÉ" prefWidth="150" />
                </columns>
                <placeholder>
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Le backlog est vide" style="-fx-font-weight: 700; -fx-text-fill: -fx-text-secondary;" />
                        <Label text="Ajoutez des tâches pour commencer à planifier." styleClass="small-text" />
                    </VBox>
                </placeholder>
            </TableView>
        </VBox>
    </ScrollPane>
</VBox>
