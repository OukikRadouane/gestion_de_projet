<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gestionprojet.controller.DashboardController"
            style="-fx-background-color: #f1f5f9;" prefWidth="1200" prefHeight="800">

    <top>
        <HBox style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 6, 0, 0, 2);"
              alignment="CENTER_LEFT" spacing="0" prefHeight="70">
            <padding>
                <Insets top="0" right="0" bottom="0" left="0"/>
            </padding>

            <VBox alignment="CENTER" spacing="0" prefWidth="250" style="-fx-background-color: #3b82f6; -fx-padding: 15 25;">
                <Label text="Project Manager"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px; -fx-font-family: 'Segoe UI', 'Helvetica Neue', sans-serif;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS" style="-fx-background-color: white;"/>

            <HBox alignment="CENTER_RIGHT" spacing="12" style="-fx-padding: 15 25;">
                <VBox alignment="CENTER" spacing="2">
                    <Label fx:id="currentUserLabel" text="User"
                           style="-fx-text-fill: #1e293b; -fx-font-weight: 600; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                    <Label fx:id="currentRoleLabel" text="Utilisateur"
                           style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                </VBox>

                <Separator orientation="VERTICAL" style="-fx-padding: 0; -fx-background-color: #e2e8f0;" prefHeight="30"/>

                <Button text="Retour" onAction="#handleBackToSuperAdmin"
                        style="-fx-background-color: transparent; -fx-text-fill: #95a5a6; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif; -fx-font-weight: 500; -fx-cursor: hand; -fx-padding: 6 12; -fx-border-radius: 6px;"
                        focusTraversable="false"/>

                <Button text="Profil" onAction="#handleEditProfile"
                        style="-fx-background-color: transparent; -fx-text-fill: #3b82f6; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif; -fx-font-weight: 500; -fx-cursor: hand; -fx-padding: 6 12; -fx-border-radius: 6px;"
                        focusTraversable="false"/>

                <Button fx:id="userManagementButton" text="Utilisateurs" onAction="#handleUserManagement"
                        style="-fx-background-color: transparent; -fx-text-fill: #059669; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif; -fx-font-weight: 500; -fx-cursor: hand; -fx-padding: 6 12; -fx-border-radius: 6px;"
                        focusTraversable="false"/>

                <Button text="Déconnexion" onAction="#handleLogout"
                        style="-fx-background-color: rgba(239, 68, 68, 0.1); -fx-text-fill: #ef4444; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif; -fx-font-weight: 500; -fx-cursor: hand; -fx-padding: 6 12; -fx-border-radius: 6px; -fx-border-color: rgba(239, 68, 68, 0.2); -fx-border-width: 1px;"
                        focusTraversable="false"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <ScrollPane style="-fx-background-color: transparent; -fx-border-style: none;" fitToWidth="true" fitToHeight="true">
            <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #f1f5f9;">
                <padding>
                    <Insets top="30" right="40" bottom="40" left="40"/>
                </padding>

                <!-- Message de bienvenue -->
                <VBox alignment="CENTER" spacing="6">
                    <Label fx:id="welcomeLabel" text="Bienvenue dans votre tableau de bord"
                           style="-fx-text-fill: #0f172a; -fx-font-weight: bold; -fx-font-size: 28px; -fx-font-family: 'Segoe UI', 'Helvetica Neue', sans-serif; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                    <Label text="Gérez vos projets et collaborateurs efficacement"
                           style="-fx-text-fill: #64748b; -fx-font-size: 16px; -fx-font-family: 'Segoe UI', sans-serif; -fx-wrap-text: true; -fx-text-alignment: center;"/>
                </VBox>

                <!-- Grille d'informations -->
                <GridPane hgap="20" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" minWidth="300"/>
                        <ColumnConstraints percentWidth="50" minWidth="300"/>
                    </columnConstraints>

                    <!-- Informations personnelles -->
                    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 8, 0, 0, 2); -fx-padding: 20;"
                          GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Informations personnelles"
                               style="-fx-text-fill: #1e293b; -fx-font-weight: bold; -fx-font-size: 18px; -fx-font-family: 'Segoe UI', sans-serif;"/>

                        <VBox spacing="12">
                            <HBox spacing="0">
                                <VBox spacing="4" HBox.hgrow="ALWAYS">
                                    <Label text="Nom d'utilisateur"
                                           style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                    <Label fx:id="usernameLabel" text="Utilisateur"
                                           style="-fx-text-fill: #1e293b; -fx-font-weight: 600; -fx-font-size: 15px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                </VBox>
                            </HBox>

                            <Separator style="-fx-background-color: #e2e8f0;"/>

                            <HBox spacing="0">
                                <VBox spacing="4" HBox.hgrow="ALWAYS">
                                    <Label text="Adresse email"
                                           style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                    <Label fx:id="emailLabel" text="email@exemple.com"
                                           style="-fx-text-fill: #1e293b; -fx-font-weight: 600; -fx-font-size: 15px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                </VBox>
                            </HBox>

                            <Separator style="-fx-background-color: #e2e8f0;"/>

                            <HBox spacing="0">
                                <VBox spacing="4" HBox.hgrow="ALWAYS">
                                    <Label text="Rôle"
                                           style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                    <HBox spacing="8" alignment="CENTER_LEFT">
                                        <Label fx:id="roleLabel" text="Utilisateur"
                                               style="-fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 12px; -fx-font-family: 'Segoe UI', sans-serif; -fx-background-color: #3b82f6; -fx-background-radius: 4px; -fx-padding: 4 8;"/>
                                    </HBox>
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>

                    <!-- Statistiques -->
                    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 8, 0, 0, 2); -fx-padding: 20;"
                          GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Statistiques"
                               style="-fx-text-fill: #1e293b; -fx-font-weight: bold; -fx-font-size: 18px; -fx-font-family: 'Segoe UI', sans-serif;"/>

                        <VBox spacing="12">
                            <HBox spacing="0">
                                <VBox spacing="4" HBox.hgrow="ALWAYS">
                                    <Label text="Projets créés"
                                           style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                    <Label fx:id="projectsCountLabel" text="0"
                                           style="-fx-text-fill: #3b82f6; -fx-font-weight: bold; -fx-font-size: 24px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                </VBox>
                            </HBox>

                            <Separator style="-fx-background-color: #e2e8f0;"/>

                            <HBox spacing="0">
                                <VBox spacing="4" HBox.hgrow="ALWAYS">
                                    <Label text="Collaborateurs"
                                           style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                    <Label fx:id="collaboratorsCountLabel" text="0"
                                           style="-fx-text-fill: #06b6d4; -fx-font-weight: bold; -fx-font-size: 24px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                </VBox>
                            </HBox>

                            <Separator style="-fx-background-color: #e2e8f0;"/>

                            <HBox spacing="0">
                                <VBox spacing="4" HBox.hgrow="ALWAYS">
                                    <Label text="Tâches en cours"
                                           style="-fx-text-fill: #64748b; -fx-font-size: 13px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                    <Label fx:id="tasksCountLabel" text="0"
                                           style="-fx-text-fill: #f59e0b; -fx-font-weight: bold; -fx-font-size: 24px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>
                </GridPane>

                <!-- Section projets -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 8, 0, 0, 2); -fx-padding: 20;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Gestion de projets"
                               style="-fx-text-fill: #1e293b; -fx-font-weight: bold; -fx-font-size: 18px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Créer un projet" onAction="#AddProject"
                                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 6px; -fx-font-weight: 600; -fx-font-size: 13px; -fx-cursor: hand; -fx-font-family: 'Segoe UI', sans-serif; -fx-padding: 8 16;"
                                focusTraversable="false"/>
                    </HBox>

                    <!-- Conteneur scrollable pour les projets en grille -->
                    <ScrollPane style="-fx-background-color: transparent; -fx-border-style: none;" fitToWidth="true" VBox.vgrow="ALWAYS" minHeight="300">
                        <GridPane fx:id="projectsGrid" hgap="16" vgap="16" style="-fx-background-color: transparent;">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" minWidth="350"/>
                                <ColumnConstraints percentWidth="50" minWidth="350"/>
                            </columnConstraints>
                            <padding>
                                <Insets top="5" right="5" bottom="5" left="5"/>
                            </padding>

                            <!-- Message vide (affiché quand il n'y a pas de projets) -->
                            <VBox fx:id="emptyStateContainer" alignment="CENTER" spacing="10" style="-fx-background-color: #f0f4f8; -fx-background-radius: 8px; -fx-padding: 40 20;" GridPane.columnSpan="2">
                                <Label text="Aucun projet pour le moment"
                                       style="-fx-text-fill: #64748b; -fx-font-size: 16px; -fx-font-family: 'Segoe UI', sans-serif; -fx-font-weight: 500;"/>
                                <Label text="Créez votre premier projet pour commencer"
                                       style="-fx-text-fill: #94a3b8; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                            </VBox>
                        </GridPane>
                    </ScrollPane>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
