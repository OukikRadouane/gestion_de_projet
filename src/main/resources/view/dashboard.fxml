<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestionprojet.controller.DashboardController"
      stylesheets="@../css/style.css"
      spacing="30">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Header Section -->
    <VBox spacing="8">
        <Label fx:id="welcomeLabel" text="Tableau de bord" styleClass="h1" />
        <Label text="Aperçu global de vos projets et activités." styleClass="small-text" />
    </VBox>

    <ScrollPane style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="30">
            <!-- Stats Overview -->
            <GridPane hgap="20" vgap="20">
                <columnConstraints>
                    <ColumnConstraints percentWidth="33.3"/>
                    <ColumnConstraints percentWidth="33.3"/>
                    <ColumnConstraints percentWidth="33.3"/>
                </columnConstraints>

                <VBox styleClass="card" GridPane.columnIndex="0" spacing="10">
                    <Label text="Projets actifs" styleClass="small-text" />
                    <Label fx:id="projectsCountLabel" text="0" style="-fx-font-size: 28px; -fx-font-weight: 800; -fx-text-fill: -fx-accent;" />
                </VBox>

                <VBox styleClass="card" GridPane.columnIndex="1" spacing="10">
                    <Label text="Collaborateurs" styleClass="small-text" />
                    <Label fx:id="collaboratorsCountLabel" text="0" style="-fx-font-size: 28px; -fx-font-weight: 800; -fx-text-fill: -fx-text-primary;" />
                </VBox>

                <VBox styleClass="card" GridPane.columnIndex="2" spacing="10">
                    <Label text="Tâches en cours" styleClass="small-text" />
                    <Label fx:id="tasksCountLabel" text="0" style="-fx-font-size: 28px; -fx-font-weight: 800; -fx-text-fill: #F59E0B;" />
                </VBox>
            </GridPane>

            <!-- Projects Section -->
            <VBox spacing="20" styleClass="card">
                <HBox alignment="CENTER_LEFT">
                    <VBox spacing="4">
                        <Label text="Vos Projets" styleClass="h2" />
                        <Label text="Gérez et suivez l'avancement de vos projets." styleClass="small-text" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox spacing="10">
                        <Button text="Nouveau Projet" onAction="#AddProject" styleClass="button-primary" />
                    </HBox>
                </HBox>

                <GridPane fx:id="projectsGrid" hgap="20" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>
                    
                    <VBox fx:id="emptyStateContainer" alignment="CENTER" spacing="15" style="-fx-padding: 60 0;" GridPane.columnSpan="2">
                        <Label text="Aucun projet trouvé" styleClass="h2" style="-fx-text-fill: -fx-text-secondary;" />
                        <Label text="Commencez par créer un nouveau projet." styleClass="small-text" />
                    </VBox>
                </GridPane>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>
