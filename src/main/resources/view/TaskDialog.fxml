<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestionprojet.controller.TaskDialogController"
      styleClass="dialog-root" stylesheets="@../css/style.css"
      spacing="10" prefWidth="550">

    <!-- Custom Title Bar -->
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15 20 0 20;">
        <Label text="Détails de la tâche" styleClass="h2" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-text-fill: -fx-text-secondary;" />
        <Button text="✕" onAction="#handleCancel" styleClass="icon-button" style="-fx-font-size: 18px; -fx-text-fill: #9CA3AF;" />
    </HBox>

    <VBox spacing="25">
        <padding>
            <Insets top="0" right="40" bottom="40" left="40"/>
        </padding>

    <VBox spacing="15">
        <VBox spacing="8">
            <Label text="Nom de la tâche" styleClass="label-strong" />
            <TextField fx:id="taskNameField" promptText="Nom de la tâche..." styleClass="input" />
        </VBox>

        <VBox spacing="8">
            <Label text="Description" styleClass="label-strong" />
            <TextArea fx:id="descriptionField" promptText="Décrivez la tâche..." prefRowCount="4" styleClass="input" />
        </VBox>

        <GridPane hgap="20" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Date limite" styleClass="label-strong" />
                <DatePicker fx:id="dueDatePicker" maxWidth="Infinity" styleClass="input" />
            </VBox>

            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Assigné à" styleClass="label-strong" />
                <ComboBox fx:id="assigneChoice" maxWidth="Infinity" styleClass="input" />
            </VBox>

            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Statut" styleClass="label-strong" />
                <ComboBox fx:id="statusChoice" maxWidth="Infinity" styleClass="input" />
            </VBox>

            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label text="Priorité" styleClass="label-strong" />
                <ComboBox fx:id="priorityChoice" maxWidth="Infinity" styleClass="input" />
            </VBox>
        </GridPane>
    </VBox>

    <Label fx:id="errorLabel" wrapText="true" visible="false" managed="false" styleClass="error-box" />

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" styleClass="button-outline" prefWidth="120" />
        <Button text="Enregistrer" onAction="#saveTask" styleClass="button-primary" prefWidth="120" />
    </HBox>
    </VBox>
</VBox>
