<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestionprojet.controller.ProjectCardController"
      styleClass="card" spacing="15">
    
    <VBox spacing="5">
        <HBox alignment="TOP_LEFT">
            <Label fx:id="projectNameLabel" text="Project Name" styleClass="h2" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
            <Label fx:id="statusLabel" text="Actif" 
                   style="-fx-background-color: #ECFDF5; -fx-text-fill: #059669; -fx-padding: 4 8; -fx-background-radius: 4; -fx-font-size: 11px; -fx-font-weight: 700;" />
        </HBox>
        <Label fx:id="descriptionLabel" text="Project description goes here..." styleClass="small-text" wrapText="true" minHeight="40" />
    </VBox>

    <Separator style="-fx-background-color: -fx-border; -fx-opacity: 0.5;" />

    <HBox spacing="20">
        <VBox spacing="2">
            <Label text="DÉBUT" style="-fx-font-size: 10px; -fx-font-weight: 700; -fx-text-fill: -fx-text-secondary;" />
            <Label fx:id="startDateLabel" text="01/01/2024" style="-fx-font-size: 13px; -fx-font-weight: 600;" />
        </VBox>
        <VBox spacing="2">
            <Label text="ÉCHÉANCE" style="-fx-font-size: 10px; -fx-font-weight: 700; -fx-text-fill: -fx-text-secondary;" />
            <Label fx:id="endDateLabel" text="31/12/2024" style="-fx-font-size: 13px; -fx-font-weight: 600;" />
        </VBox>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Sprints" onAction="#handleManageSprints" styleClass="button-primary" style="-fx-padding: 6 12; -fx-font-size: 12px;" />
        <Button text="Modifier" onAction="#handleEdit" styleClass="button-outline" style="-fx-padding: 6 12; -fx-font-size: 12px;" />
        <Button text="Supprimer" onAction="#handleDelete" 
                style="-fx-background-color: transparent; -fx-text-fill: #EF4444; -fx-font-weight: 600; -fx-font-size: 12px; -fx-cursor: hand;" />
    </HBox>
</VBox>
