<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.gestionprojet.controller.AuthController"
           stylesheets="@../css/style.css"
           styleClass="root-pane" alignment="CENTER">

    <VBox alignment="CENTER" maxWidth="500" spacing="25" styleClass="card" StackPane.alignment="CENTER">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <!-- Logo & Title -->
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="12">
                <Circle radius="12" styleClass="accent-circle"/>
                <Label text="ProjectHub" styleClass="title"/>
            </HBox>
            <Label text="Créez votre compte pour commencer." styleClass="small-text"/>
        </VBox>

        <!-- Form -->
        <VBox spacing="15">
            <VBox spacing="6">
                <Label text="Nom d'utilisateur" style="-fx-font-weight: 600; -fx-font-size: 13px;"/>
                <TextField fx:id="registerUsernameField" promptText="votre_nom"
                           style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8; -fx-padding: 10;"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Adresse email" style="-fx-font-weight: 600; -fx-font-size: 13px;"/>
                <TextField fx:id="registerEmailField" promptText="nom@exemple.com"
                           style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8; -fx-padding: 10;"/>
            </VBox>

            <GridPane hgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>
                
                <VBox spacing="6" GridPane.columnIndex="0">
                    <Label text="Mot de passe" style="-fx-font-weight: 600; -fx-font-size: 13px;"/>
                    <PasswordField fx:id="registerPasswordField" promptText="••••••••"
                                  style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8; -fx-padding: 10;"/>
                </VBox>
                
                <VBox spacing="6" GridPane.columnIndex="1">
                    <Label text="Confirmer" style="-fx-font-weight: 600; -fx-font-size: 13px;"/>
                    <PasswordField fx:id="registerConfirmPasswordField" promptText="••••••••"
                                  style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8; -fx-padding: 10;"/>
                </VBox>
            </GridPane>

            <VBox spacing="6">
                <Label text="Rôle" style="-fx-font-weight: 600; -fx-font-size: 13px;"/>
                <ComboBox fx:id="registerRoleComboBox" maxWidth="Infinity"
                          style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8; -fx-padding: 6;"/>
            </VBox>

            <CheckBox text="J'accepte les conditions d'utilisation" styleClass="small-text"/>
        </VBox>

        <!-- Action -->
        <VBox spacing="15">
            <Label fx:id="registerErrorLabel" wrapText="true" visible="false" managed="false"
                   style="-fx-text-fill: #EF4444; -fx-font-size: 13px; -fx-background-color: #FEF2F2; -fx-padding: 10; -fx-background-radius: 8;"/>
            
            <Button text="Créer un compte" onAction="#handleRegister" styleClass="button-primary" maxWidth="Infinity" prefHeight="45"/>
        </VBox>

        <Separator style="-fx-opacity: 0.5;"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Déjà un compte ?" styleClass="small-text"/>
            <Hyperlink text="Se connecter" onAction="#showLoginView" 
                       style="-fx-text-fill: -fx-accent; -fx-font-weight: 700; -fx-font-size: 13px; -fx-padding: 0;"/>
        </HBox>
    </VBox>

</StackPane>