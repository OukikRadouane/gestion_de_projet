<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestionprojet.controller.SprintController"
      styleClass="dialog-root" stylesheets="@../css/style.css"
      spacing="10" prefWidth="550">

    <!-- Custom Title Bar -->
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15 20 0 20;">
        <Label fx:id="titleLabel" text="Détails du sprint" styleClass="h2" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-text-fill: -fx-text-secondary;" />
        <Button text="✕" onAction="#handleCancel" styleClass="icon-button" style="-fx-font-size: 18px; -fx-text-fill: #9CA3AF;" />
    </HBox>

    <VBox spacing="20">
        <padding>
            <Insets top="0" right="40" bottom="40" left="40"/>
        </padding>

    <VBox spacing="20">
        <VBox spacing="8">
            <Label text="Nom du sprint" styleClass="label-strong" />
            <TextField fx:id="sprintName" promptText="Ex: Sprint 1, Final sprint..." styleClass="input" />
        </VBox>

        <VBox spacing="8">
            <Label text="Objectif du sprint" styleClass="label-strong" />
            <TextArea fx:id="sprintGoal" promptText="Décrivez l'objectif de ce sprint..." prefRowCount="3" wrapText="true" styleClass="input" />
        </VBox>

        <GridPane hgap="20" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Date de début" styleClass="label-strong" />
                <DatePicker fx:id="sprintStartDate" maxWidth="Infinity" styleClass="input" />
            </VBox>

            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Date de fin" styleClass="label-strong" />
                <DatePicker fx:id="sprintEndDate" maxWidth="Infinity" styleClass="input" />
            </VBox>

            <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Statut" styleClass="label-strong" />
                <ComboBox fx:id="sprintStatus" maxWidth="Infinity" styleClass="input" />
            </VBox>

            <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER_LEFT">
                <Label fx:id="durationLabel" text="Durée: -" styleClass="small-text" style="-fx-font-weight: 700; -fx-text-fill: -fx-accent;" />
            </VBox>
        </GridPane>
    </VBox>

    <Label fx:id="errorLabel" wrapText="true" visible="false" managed="false"
           style="-fx-text-fill: #EF4444; -fx-font-size: 13px; -fx-background-color: #FEF2F2; -fx-padding: 8; -fx-background-radius: 6;" />

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" styleClass="button-outline" prefWidth="120" />
        <Button text="Enregistrer" onAction="#handleSave" styleClass="button-primary" prefWidth="120" />
    </HBox>
</VBox>
</VBox>
