<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestionprojet.controller.ProjectController"
      stylesheets="@../css/style.css"
      spacing="25" prefWidth="500">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="Détails du projet" styleClass="h1" />

    <VBox spacing="20">
        <VBox spacing="8">
            <Label text="Nom du projet" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
            <TextField fx:id="ProjectName" promptText="Entrez le nom du projet..."
                       style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8; -fx-padding: 10;" />
        </VBox>

        <VBox spacing="8">
            <Label text="Description" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
            <TextArea fx:id="ProjectDesc" promptText="Décrivez le projet..." prefRowCount="4" wrapText="true"
                      style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8; -fx-padding: 10;" />
        </VBox>

        <GridPane hgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <VBox spacing="8" GridPane.columnIndex="0">
                <Label text="Date de début" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                <DatePicker fx:id="ProjectStartDate" maxWidth="Infinity"
                            style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8;" />
            </VBox>

            <VBox spacing="8" GridPane.columnIndex="1">
                <Label text="Date de fin" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
                <DatePicker fx:id="ProjectEndDate" maxWidth="Infinity"
                            style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8;" />
            </VBox>
        </GridPane>
    </VBox>

    <Label fx:id="errorLabel" wrapText="true" visible="false" managed="false"
           style="-fx-text-fill: #EF4444; -fx-font-size: 13px; -fx-background-color: #FEF2F2; -fx-padding: 8; -fx-background-radius: 6;" />

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" styleClass="button-outline" prefWidth="120" />
        <Button text="Enregistrer" onAction="#handleSave" styleClass="button-primary" prefWidth="120" />
    </HBox>
</VBox>
