<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestionprojet.controller.ProjectController"
      styleClass="dialog-root" stylesheets="@../css/style.css"
      spacing="10" prefWidth="500">

    <!-- Custom Title Bar -->
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15 20 0 20;">
        <Label text="Détails du projet" styleClass="h2" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-text-fill: -fx-text-secondary;" />
        <Button text="✕" onAction="#handleCancel" styleClass="icon-button" style="-fx-font-size: 18px; -fx-text-fill: #9CA3AF;" />
    </HBox>

    <VBox spacing="20">
        <padding>
            <Insets top="0" right="40" bottom="40" left="40"/>
        </padding>

    <VBox spacing="20">
        <VBox spacing="8">
            <Label text="Nom du projet" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
            <TextField fx:id="ProjectName" promptText="Entrez le nom du projet..."
                       style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8; -fx-padding: 10;" />
        </VBox>

        <VBox spacing="8">
            <Label text="Description" style="-fx-font-weight: 600; -fx-font-size: 13px;" />
            <TextArea fx:id="ProjectDesc" promptText="Décrivez le projet..." prefRowCount="4" wrapText="true"
                      style="-fx-background-color: white; -fx-border-color: -fx-border; -fx-border-radius: 8; -fx-padding: 10;" />
        </VBox>

        <GridPane hgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <VBox spacing="8" GridPane.columnIndex="0">
                <Label text="Date de début" styleClass="label-strong" />
                <DatePicker fx:id="ProjectStartDate" maxWidth="Infinity" styleClass="input" />
            </VBox>

            <VBox spacing="8" GridPane.columnIndex="1">
                <Label text="Date de fin" styleClass="label-strong" />
                <DatePicker fx:id="ProjectEndDate" maxWidth="Infinity" styleClass="input" />
            </VBox>
        </GridPane>
    </VBox>

    <Label fx:id="errorLabel" wrapText="true" visible="false" managed="false" styleClass="error-box" />

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" styleClass="button-outline" prefWidth="120" />
        <Button text="Enregistrer" onAction="#handleSave" styleClass="button-primary" prefWidth="120" />
    </HBox>
</VBox>
</VBox>
