<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gestionprojet.controller.UserManagementController"
            style="-fx-background-color: #f1f5f9;" prefWidth="1000" prefHeight="700">

    <top>
        <VBox spacing="20" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 6, 0, 0, 2);">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <!-- En-tête -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Gestion des Utilisateurs"
                       style="-fx-text-fill: #1e293b; -fx-font-weight: bold; -fx-font-size: 24px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="addUserButton" text="Nouvel Utilisateur" onAction="#handleAddUser"
                        style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 6px; -fx-font-weight: 600; -fx-font-size: 14px; -fx-cursor: hand; -fx-font-family: 'Segoe UI', sans-serif; -fx-padding: 10 20;"
                        focusTraversable="false"/>
            </HBox>

            <!-- Filtres -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Filtrer par statut:"
                       style="-fx-text-fill: #64748b; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;"/>
                <ComboBox fx:id="statusFilterComboBox" prefWidth="120"
                          style="-fx-background-color: white; -fx-border-color: #d1d5db; -fx-border-radius: 6px; -fx-background-radius: 6px;"/>
                
                <Separator orientation="VERTICAL" style="-fx-background-color: #e2e8f0;" prefHeight="20"/>
                
                <CheckBox fx:id="showHiddenUsersCheckBox" text="Afficher les utilisateurs masqués"
                          style="-fx-text-fill: #64748b; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', sans-serif;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="0" style="-fx-background-color: #f1f5f9;">
            <padding>
                <Insets top="20" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Tableau des utilisateurs -->
            <VBox spacing="0" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 8, 0, 0, 2);">
                <TableView fx:id="usersTable" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: transparent; -fx-table-cell-border-color: #e2e8f0; -fx-background-radius: 12px;">
                    <columns>
                        <TableColumn fx:id="firstNameColumn" text="Prénom" prefWidth="120" minWidth="100"/>
                        <TableColumn fx:id="lastNameColumn" text="Nom" prefWidth="120" minWidth="100"/>
                        <TableColumn fx:id="usernameColumn" text="Nom d'utilisateur" prefWidth="140" minWidth="120"/>
                        <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" minWidth="150"/>
                        <TableColumn fx:id="roleColumn" text="Rôle" prefWidth="140" minWidth="120"/>
                        <TableColumn fx:id="statusColumn" text="Statut" prefWidth="120" minWidth="100"/>
                        <TableColumn fx:id="createdAtColumn" text="Créé le" prefWidth="100" minWidth="90"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <!-- Boutons d'action -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f8fafc; -fx-padding: 15 20; -fx-border-color: #e2e8f0; -fx-border-width: 1 0 0 0;">
                    <Button fx:id="editUserButton" text="Modifier" onAction="#handleEditUser" disable="true"
                            style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-background-radius: 6px; -fx-font-weight: 500; -fx-font-size: 13px; -fx-cursor: hand; -fx-font-family: 'Segoe UI', sans-serif; -fx-padding: 8 16;"
                            focusTraversable="false"/>
                    
                    <Button fx:id="toggleStatusButton" text="Activer/Désactiver" onAction="#handleToggleStatus" disable="true"
                            style="-fx-background-color: #06b6d4; -fx-text-fill: white; -fx-background-radius: 6px; -fx-font-weight: 500; -fx-font-size: 13px; -fx-cursor: hand; -fx-font-family: 'Segoe UI', sans-serif; -fx-padding: 8 16;"
                            focusTraversable="false"/>
                    
                    <Button fx:id="hideUserButton" text="Masquer" onAction="#handleHideUser" disable="true"
                            style="-fx-background-color: #64748b; -fx-text-fill: white; -fx-background-radius: 6px; -fx-font-weight: 500; -fx-font-size: 13px; -fx-cursor: hand; -fx-font-family: 'Segoe UI', sans-serif; -fx-padding: 8 16;"
                            focusTraversable="false"/>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <Button fx:id="deleteUserButton" text="Supprimer définitivement" onAction="#handleDeleteUser" disable="true"
                            style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-background-radius: 6px; -fx-font-weight: 500; -fx-font-size: 13px; -fx-cursor: hand; -fx-font-family: 'Segoe UI', sans-serif; -fx-padding: 8 16;"
                            focusTraversable="false"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>